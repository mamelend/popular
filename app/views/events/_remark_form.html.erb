  <%= form_for [event, Remark.new], :html => { :multipart => true }, :remote => true, method: "post" do |f| %>
  <%= f.hidden_field :remark_direction, value: 1 %>
  <%= f.hidden_field :user_id, value: user.id %>
  <%= f.text_field :description %>
  <%= f.file_field :photo %>
  <%= f.submit message, id: "create_remark" %>
  <%= f.button "nevermind", name: "back" %>
  <% end %>