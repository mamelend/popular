  <%= form_for [event, Remark.new], :html => { :multipart => true }, :remote => true, method: "post" do |f| %>
  <%= f.hidden_field :remark_direction, value: val %>
  <%= f.hidden_field :user_id, value: user.id %>
  <%= f.text_field :description %>
  <%= f.file_field :photo, class: "photo_upload" %>
  <%= f.submit message, id: "create_remark" %>
