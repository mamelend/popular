<div class="row">
  <div class="small-3 large-3 columns user_info">
    <%= image_tag(user.profile_pic_url) %>
    <%= user.first_name %> <%= user.popularity %>
  </div>

  <div class="small-3 large-3 columns remark_buttons">  
    <%= link_to "hate", new_event_remark_path(event), data:{direction: -1}, class: "hate" %>
    <%= link_to "love", new_event_remark_path(event), data:{direction: 1}, class: "love"  %>
  </div>
    
  <div class="small-3 large-3 columns love_form">
    <%= render partial: "remark_form", locals: { event: event, user: user, message: "tell em how you feel" } %>
  </div>

  <div class="small-3 large-3 columns hate_form">
    <%= render partial: "remark_form", locals: { event: event, user: user, message: "feel my wrath" } %>
  </div>

  <div class="small-3 large-3 columns remark_display">
    Type of remark love/hate
  </div>
</div>
